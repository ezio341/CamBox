<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.cambox.model.User" />
        <variable
            name="profile"
            type="com.example.cambox.model.Profile" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7F8"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Profile Account"
                android:textColor="#0A1034"
                android:textSize="32dp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="112dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="94.68dp"
                android:layout_height="92dp"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#0A1034"
                    android:textSize="20dp"
                    android:text="@{profile.name}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@{profile.address}"
                    android:textColor="@color/browser_actions_title_color"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Account Information"
                android:textColor="#0A1034"
                android:textSize="18dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="300dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Security and Settings"
                android:textColor="#0A1034"
                android:textSize="18dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="380dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Help"
                android:textColor="#0A1034"
                android:textSize="18dp"></TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="120dp"
            android:background="#FDFEFF"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="580dp">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/holo_red_light"
                android:fontFamily="@font/poppins"
                android:onClick="logout"
                android:text="Logout"
                android:textColor="#282D64" />


        </LinearLayout>


    </FrameLayout>
</layout>